@model CarrinhoCompraViewModel

<div class="Container">
    <div class="row">

        @*<img src="~/images/cart.png"/>*@
        <div>
            <h3>Seu carrinho de compras: </h3>
        </div>

        <table class="table table-bordered table-striped">
            @*Cabecalho da tabela*@
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>


            @*Corpo da tabela*@
        <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-center">@item.Lanche.Nome</td>
                        <td class="text-center">@item.Lanche.Preco.ToString("c")</td>

                        <td class="text-right">
                            @((item.Quantidade * item.Lanche.Preco).ToString("c"))
                        </td>

                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra" 
                            asp-route-lancheId="@item.Lanche.LancheId"><img src="~/images/remove.jpg"/></a>

                        </td>

                    </tr>
                }
        </tbody>


         @*Rodape da tabela*@
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total: </td>
                    <td class="text-right">
                        @Model.CarrinhoCompraTotal.ToString("c")
                    </td>

                </tr>


            </tfoot>

        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-sucess" asp-controller="Pedido" asp-action="Checkout"> Encerrar Pedido </a>
                &nbsp;&nbsp;&nbsp;

                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List"> Continuar Comprando </a>
            </div>
        </div>

    </div>
</div>